<!DOCTYPE html>
<html>
<% include ./partials/head %>
<body>
  <% include ./partials/header %>
  <h1>Happy Hour</h1>
  <h3>
  <% if(user){ %>
    Welcome, <%= user.username%>
    <% } else { %>
    Welcome, stranger
  <% } %>
  </h3>
  <div id="tender">
    <img src="/img/bartender.jpg" alt="">
  </div>
  <div id="bartender">
    <input type="submit" value="What'll it be?" >
  </div>
  <div id='welcome'>
    <input id='start' type="submit" value="Hmm... not sure" >
    <input id="random" type="submit" value="Dealer's choice" >
  </div>
  <div id="questions">
    <h5 id='title' backgroundColor='white'></h5>
    <table>
      <tr>
        <input class="firstRound button" id="qOne" type="submit">
        <input class="firstRound button" id="qTwo" type="submit">
      </tr>
      <tr>
        <input class="firstRound button" id="qThree" type="submit">
        <input class="firstRound button" id="qFour" type="submit">
      </tr>
    </table>
  </div>
  <div id='modal'>
    <section>
      <div id='drink'>
        <img src="" alt="">
        <% if(user) { %>
          <button id="save-drink">Save</button>
          <!-- <input type="submit" class="button" value="save"> -->
        <% } else { %>
        <form action="/users/login" method='get'>
          <input class='button' type="submit" value="login">
        </form>
        <% } %>
      </div>
      <h4>Coming right up</h4>
      <ul id='desc'></ul>
    </section>
  </div>
</body>
</html>
